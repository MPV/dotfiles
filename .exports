#!/usr/bin/env bash

# Make vim the default editor.
export EDITOR='vim'

export GOPATH=~/go

# Add ~/bin to the PATH:
export PATH="$HOME/bin:$PATH"

# Add ./bin to the PATH:
export PATH=./bin:$PATH

# Krew:
export PATH=$PATH:~/.krew/bin

# Add ~/go/bin to the PATH:
export PATH="$HOME/go/bin:$PATH"

# Locale
export LC_CTYPE=en_GB.UTF-8
export LC_ALL=en_GB.UTF-8

